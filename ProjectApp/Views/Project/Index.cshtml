@model IEnumerable<ProjectApp.Models.ProjectViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Projects</h1>

<table class="table ui striped table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Language</th>
            <th>Info</th>
            <th>StartDate</th>
            <th>EndDate</th>
            <td>  
                <a asp-action="AddorEdit">
                    <i class="plus icon text-dark">Add New Project</i>
                </a>
            </td>
        </tr>
    </thead>    
    <tbody>
@foreach (var item in Model) {
        <tr>
            <th>@item.Name</th>
            <th>@item.Language</th>
            <th>@item.Info</th>
            <th>@item.StartDate</th>
            <th>@item.EndDate</th>
            <td>
                <a asp-action="Delete" asp-route-id="@item.Id" class ="text-danger ml-1"
                   onclick="return confirm('Are you sure you want to delete this record?')">
                    <i class="minus icon">Delete</i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
