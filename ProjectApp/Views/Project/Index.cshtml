@model IEnumerable<ProjectApp.Models.ProjectViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Projects</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Language</th>
            <th>Info</th>
            <th>StartDate</th>
            <th>EndDate</th>
            <td>  
                <a asp-action="AddorEdit">
                    <i class="text-dark">Add New Project</i>
                </a>
            </td>
        </tr>
    </thead>    
    <tbody>
@foreach (var item in Model) {
        <tr>
            <th>@item.Name</th>
            <th>@item.Language</th>
            <th>@item.Info</th>
            <th>@item.StartDate</th>
            <th>@item.EndDate</th>
            <td>
                <a asp-action="AddorEdit" asp-route-id="@item.Id" class="text-dark">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger ml-1"
                   onclick="return confirm('Are you sure you want to delete this record?')">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div class="text-right">
    <img src="~/images/toolbox.jpg" class=".img-responsive" style="max-width: 40%; height:auto;" alt="My image" />
</div>