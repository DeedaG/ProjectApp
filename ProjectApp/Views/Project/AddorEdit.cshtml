@model ProjectApp.Models.ProjectViewModel

@{ ViewData["Title"] = "Create"; }

    <head>
        <script src="https://kit.fontawesome.com/817e2bf535.js" crossorigin="anonymous"></script>
    </head>

<h1><i class="fa fad fa-pen-alt fa-2x">Project Details</i></h1>

@if (TempData["Message"] != null)
{
    <div style="background-color: white; color: black; border-style: double" class = "col-md-3">
        <div style="color:red" class="text-center">
            @TempData["Message"]
        </div>
    </div>
}

<hr />
<div class="text-center">
    <img src="~/images/projectpix.jpg" style="float:right" class="w-50 h-50" alt="My image" />
    <div style="text-align:left">
        @*<div class="col-md-3" style="float:left">*@
        <form asp-action="AddorEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <partial name="_Calendar" />
                <i class="fa fad fa-pen-alt fa-3x"><input type="submit" value="Update" class="btn btn-primary panel panel-success" /></i>

            </div>
        </form>
    </div>
    <div style="text-align:left" syle="background color:white">
        <a asp-action="Index" >
            <i class="fa arrow alternate circle left icon">Back to List</i>
        </a>
    </div>
</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
